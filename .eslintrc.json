{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-unexpected-multiline": "off",
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"],
    "indent": ["warn", 2],
    "no-unused-vars": "warn",
    "no-console": "warn"
  },
  "globals": {
    "Chart": "readonly",
    "fetch": "readonly"
  }
}
